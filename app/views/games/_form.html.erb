<%= form_with(model: game, local: true) do |form| %>
  <% if game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
      <% game.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :Nombre_del_juego %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :Reglas %>
    <%= form.text_area :rule %>
  </div>

  <div class="field">
    <%= form.label :Reglas_en_archivo_pdf %>
    <%= form.file_field :rules %>
  </div>

  <div class="field">
    <%= form.label :Caja_del_tablero %>
    <%= form.file_field :box %>
  </div>

  <div class="field">
    <%= form.label :Piezas_y_partes_del_tablero %>
    <%= form.file_field :images, multiple: true %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
